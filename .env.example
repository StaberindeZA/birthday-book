# Birthday Book Environment Variables
# Copy this file to .env and modify the values as needed

# Domain used for sharing links (optional)
# If not set, the application will use the request origin
# Examples:
# SHARE_DOMAIN=https://mybirthdaybook.com
# SHARE_DOMAIN=http://localhost:8000
# SHARE_DOMAIN=https://birthdays.example.com
SHARE_DOMAIN=http://localhost:8001

# Port the server runs on (optional, defaults to 8000)
# Examples:
# PORT=3000
# PORT=8080
PORT=8000

# Database file path (optional, defaults to birthday_book.db)
# Examples:
# DATABASE_PATH=./data/birthday_book.db
# DATABASE_PATH=/var/lib/birthday_book/database.db
DATABASE_PATH=birthday_book.db

# CORS (for production)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8000,https://yourdomain.com
